<% content_for(:html_title) { "#{@author.first_name} #{@author.last_name}" } %>

<!-- Author name -->
<h2><%= @author.first_name %> <%= @author.last_name %></h2>

<!-- Recent posts -->
<h4>Recent posts</h4>
<% @author.recent_posts.each do |post| %>
  <a href="<%= url("/post/#{post.slug}") %>"><%= post.title %></a>
  <br>
<% end %>
